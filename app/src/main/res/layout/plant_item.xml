<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plant"
        app:layout_constraintEnd_toEndOf="@+id/iv_plant"

        android:text=""
        android:textSize="20sp"
         />

    <ImageView
        android:id="@+id/iv_plant"
        android:layout_width="390dp"
        android:layout_height="100dp"

        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_diary"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Diary"
        app:layout_constraintStart_toStartOf="@+id/iv_plant"
        app:layout_constraintTop_toBottomOf="@+id/iv_plant" />

    <Button
        android:id="@+id/button_detail"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="Detail"
        app:layout_constraintStart_toEndOf="@+id/button_diary"
        app:layout_constraintTop_toBottomOf="@+id/iv_plant" />

</androidx.constraintlayout.widget.ConstraintLayout>